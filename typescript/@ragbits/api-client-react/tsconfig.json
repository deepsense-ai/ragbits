{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "composite": true,
        "rootDir": "src"
    },
    "references": [{ "path": "../api-client" }],
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
