{
  "name": "ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd ../../ && uv sync && ragbits api run --debug",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "wait:backend": "wait-on http-get://127.0.0.1:8000/",
    "test": "vitest --config vitest.config.ts unit",
    "test:run": "vitest run --config vitest.config.ts unit",
    "test:integration": "concurrently -k -s first \"npm run dev:backend -- examples.chat.offline_chat:MyChat\" \"npm run wait:backend && vitest --config vitest.config.ts integration\"",
    "test:integration:dev": "vitest --config vitest.config.ts integration"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.8.1",
    "@hookform/resolvers": "^5.0.1",
    "@ragbits/api-client-react": "*",
    "@rjsf/core": "^5.24.11",
    "@rjsf/utils": "^5.24.11",
    "@rjsf/validator-ajv8": "^5.24.11",
    "fflate": "^0.8.2",
    "framer-motion": "^12.23.6",
    "github-markdown-css": "^5.8.1",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "react-json-view-lite": "^2.4.1",
    "react-markdown": "^9.0.3",
    "remark-gfm": "^4.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@iconify/react": "^5.2.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash": "^4.17.19",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^7.0.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  }
}
